<h3>以下の内容で投稿しますか？</h3>
<%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache %>
  <p><%= @picture.content %></p>
  <% if @picture.image.present? %>
  <p><%= image_tag @picture.image.url %></p>
  <% end %>
  <%= form.submit  "登録する" %>
  <%= form.submit  "戻る", name: 'back' %>
<% end %>